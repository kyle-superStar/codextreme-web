<script>
  // 等待 DOM 加载完成
  document.addEventListener('DOMContentLoaded', () => {
    const iframe = document.getElementById('gameFrame');
    const fullscreenBtn = document.getElementById('fullscreenBtn');
    const exitFullscreenBtn = document.getElementById('exitFullscreenBtn');

    if (fullscreenBtn && exitFullscreenBtn && iframe) {
      fullscreenBtn.addEventListener('click', () => {
        if (iframe.requestFullscreen) {
          iframe.requestFullscreen().then(() => {
            fullscreenBtn?.classList.add('hidden');
            exitFullscreenBtn?.classList.remove('hidden');
          }).catch((err) => {
            console.error(`Error attempting to enable fullscreen: ${err.message}`);
          });
        }
      });

      exitFullscreenBtn.addEventListener('click', () => {
        if (document.fullscreenElement && document.exitFullscreen) {
          document.exitFullscreen().then(() => {
            fullscreenBtn?.classList.remove('hidden');
            exitFullscreenBtn?.classList.add('hidden');
          }).catch((err) => {
            console.error(`Error attempting to exit fullscreen: ${err.message}`);
          });
        }
      });

      // 监听全屏变化事件
      document.addEventListener('fullscreenchange', () => {
        if (!document.fullscreenElement) {
          fullscreenBtn?.classList.remove('hidden');
          exitFullscreenBtn?.classList.add('hidden');
        }
      });
    }

    // 复制链接功能
    const copyLinkBtn = document.querySelector('.copy-link');
    const copyToast = document.getElementById('copyToast');
    
    if (copyLinkBtn) {
      copyLinkBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(window.location.href).then(() => {
          // 显示复制成功提示
          const originalTitle = copyLinkBtn.getAttribute('title');
          copyLinkBtn.classList.add('bg-green-600/80');
          
          // 显示提示框
          if (copyToast) {
            copyToast.classList.add('opacity-100');
            
            // 2秒后隐藏提示框
            setTimeout(() => {
              copyToast.classList.remove('opacity-100');
            }, 2000);
          }
          
          // 2秒后恢复按钮原样
          setTimeout(() => {
            copyLinkBtn.classList.remove('bg-green-600/80');
          }, 2000);
        }).catch(err => {
          console.error('无法复制链接: ', err);
        });
      });
    }

    // FAQ 折叠功能
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        // 获取当前 FAQ 项的内容和箭头
        const content = toggle.nextElementSibling;
        const arrow = toggle.querySelector('.faq-arrow');
        
        // 切换内容显示/隐藏
        if (content) {
          content.classList.toggle('hidden');
        }
        
        // 旋转箭头
        if (content && arrow) {
          if (content.classList.contains('hidden')) {
            arrow.classList.remove('rotate-180');
          } else {
            arrow.classList.add('rotate-180');
          }
        }
      });
    });
  });
</script>
