---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/Card.astro";

import { getAbsoluteLocaleUrl } from "astro:i18n";
import { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";

const currentLang = Astro.currentLocale || "en";
const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<BaseLayout title={translateLabels("faq.meta_title")}>
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-gray-900 to-gray-800 text-white py-20 overflow-hidden -mt-4"
  >
    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <h1
          class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in text-shadow-lg"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#6B5B95]"
          >
            {translateLabels("faq.title")}
          </span>
        </h1>
        <p
          class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block"
        >
          {translateLabels("faq.description")}
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Categories -->
  <main class="bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-900 dark:to-gray-800 py-16 relative">
    <div class="container mx-auto px-4">
      <!-- Game Basics -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#6B5B95] to-[#8B7CB0]">
            {translateLabels("faq.basics.title")}
          </span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <Card
            title={translateLabels("faq.basics.q1")}
            description={translateLabels("faq.basics.a1")}
            borderColor="border-[#FF4655]"
            gradientFrom="from-[#FF4655]"
            gradientTo="to-[#FF8082]"
            textColor="text-[#6B5B95]"
            hoverTextColor="hover:text-[#FF4655]"
            icon="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
          <Card
            title={translateLabels("faq.basics.q2")}
            description={translateLabels("faq.basics.a2")}
            borderColor="border-[#6B5B95]"
            gradientFrom="from-[#6B5B95]"
            gradientTo="to-[#8B7CB0]"
            textColor="text-[#6B5B95]"
            hoverTextColor="hover:text-[#8B7CB0]"
            icon="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
          />
          <Card
            title={translateLabels("home.faq.q1")}
            description={translateLabels("home.faq.a1")}
            borderColor="border-[#FF4655]"
            gradientFrom="from-[#FF4655]"
            gradientTo="to-[#FF8082]"
            textColor="text-[#6B5B95]"
            hoverTextColor="hover:text-[#FF4655]"
            icon="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
          />
          <Card
            title={translateLabels("home.faq.q2")}
            description={translateLabels("home.faq.a2")}
            borderColor="border-[#6B5B95]"
            gradientFrom="from-[#6B5B95]"
            gradientTo="to-[#8B7CB0]"
            textColor="text-[#6B5B95]"
            hoverTextColor="hover:text-[#8B7CB0]"
            icon="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
          />
        </div>
      </div>

      <!-- Gameplay -->
      <div class="mb-16">
