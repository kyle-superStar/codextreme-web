            title={translateLabels("home.faq.q8")}
            description={translateLabels("home.faq.a8")}
            borderColor="border-[#00BCD4]"
            gradientFrom="from-[#00BCD4]"
            gradientTo="to-[#4DD0E1]"
            textColor="text-[#00BCD4]"
            hoverTextColor="hover:text-[#4DD0E1]"
            icon="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
          />
          <Card
            title={translateLabels("home.faq.q9")}
            description={translateLabels("home.faq.a9")}
            borderColor="border-[#9C27B0]"
            gradientFrom="from-[#9C27B0]"
            gradientTo="to-[#BA68C8]"
            textColor="text-[#9C27B0]"
            hoverTextColor="hover:text-[#BA68C8]"
            icon="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
          <Card
            title={translateLabels("home.faq.q10")}
            description={translateLabels("home.faq.a10")}
            borderColor="border-[#FF5722]"
            gradientFrom="from-[#FF5722]"
            gradientTo="to-[#FF8A65]"
            textColor="text-[#FF5722]"
            hoverTextColor="hover:text-[#FF8A65]"
            icon="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
          />
        </div>
      </div>
    </div>
  </main>

  <!-- Contact Section -->
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#6B5B95]">
          {translateLabels("faq.contact.title")}
        </span>
      </h2>
      <p class="text-lg mb-8 text-gray-600 dark:text-gray-300">
        {translateLabels("faq.contact.description")}
      </p>
      <a
        href={getAbsoluteLocaleUrl(currentLang, "contact")}
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-[#FF6F61] to-[#6B5B95] rounded-lg hover:opacity-90 transition-opacity"
      >
        {translateLabels("faq.contact.button")}
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"
          ></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .group:hover h2 span,
  .group:hover h3 span {
    background-position: 100% 50%;
    transition: background-position 0.5s ease-out;
  }

  h2 span,
  h3 span {
    background-size: 200% auto;
    background-position: 0% 50%;
    transition: background-position 0.3s ease-in;
  }
</style> 