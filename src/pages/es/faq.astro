          />
          <Card
            title={translateLabels("faq.gameplay.q3")}
            description={translateLabels("faq.gameplay.a3")}
            borderColor="border-[#E91E63]"
            gradientFrom="from-[#E91E63]"
            gradientTo="to-[#F06292]"
            textColor="text-[#E91E63]"
            hoverTextColor="hover:text-[#F06292]"
            icon="M13 10V3L4 14h7v7l9-11h-7z"
          />
          <Card
            title={translateLabels("home.faq.q3")}
            description={translateLabels("home.faq.a3")}
            borderColor="border-[#4CAF50]"
            gradientFrom="from-[#4CAF50]"
            gradientTo="to-[#81C784]"
            textColor="text-[#4CAF50]"
            hoverTextColor="hover:text-[#81C784]"
            icon="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
          <Card
            title={translateLabels("home.faq.q4")}
            description={translateLabels("home.faq.a4")}
            borderColor="border-[#FF9800]"
            gradientFrom="from-[#FF9800]"
            gradientTo="to-[#FFB74D]"
            textColor="text-[#FF9800]"
            hoverTextColor="hover:text-[#FFB74D]"
            icon="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
          <Card
            title={translateLabels("home.faq.q5")}
            description={translateLabels("home.faq.a5")}
            borderColor="border-[#E91E63]"
            gradientFrom="from-[#E91E63]"
            gradientTo="to-[#F06292]"
            textColor="text-[#E91E63]"
            hoverTextColor="hover:text-[#F06292]"
            icon="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </div>
      </div>

      <!-- Abilities & Mechanics -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#8BC34A] to-[#AED581]">
            {translateLabels("faq.abilities.title")}
          </span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <Card
            title={translateLabels("home.faq.q6")}
            description={translateLabels("home.faq.a6")}
            borderColor="border-[#8BC34A]"
            gradientFrom="from-[#8BC34A]"
            gradientTo="to-[#AED581]"
            textColor="text-[#8BC34A]"
            hoverTextColor="hover:text-[#AED581]"
            icon="M13 10V3L4 14h7v7l9-11h-7z"
          />
          <Card
            title={translateLabels("home.faq.q7")}
            description={translateLabels("home.faq.a7")}
            borderColor="border-[#9C27B0]"
            gradientFrom="from-[#9C27B0]"
            gradientTo="to-[#BA68C8]"
            textColor="text-[#9C27B0]"
            hoverTextColor="hover:text-[#BA68C8]"
            icon="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </div>
      </div>

      <!-- Technical Support -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#00BCD4] to-[#4DD0E1]">
            {translateLabels("faq.technical.title")}
          </span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <Card
            title={translateLabels("faq.technical.q1")}
            description={translateLabels("faq.technical.a1")}
            borderColor="border-[#9C27B0]"
            gradientFrom="from-[#9C27B0]"
            gradientTo="to-[#BA68C8]"
            textColor="text-[#9C27B0]"
            hoverTextColor="hover:text-[#BA68C8]"
            icon="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          />
          <Card
            title={translateLabels("faq.technical.q2")}
            description={translateLabels("faq.technical.a2")}
